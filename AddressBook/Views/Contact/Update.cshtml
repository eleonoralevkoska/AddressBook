@model ContactViewModel

@{
    ViewData["Title"] = "Update";
}

    <div class="row orderForm">
        <div class="col-md-6">
            <form asp-controller="Contact" asp-action="Update" method="post" class="form-horizontal" role="form">
                <h3 class="col-md-offset-2">Update contact</h3>
                @Html.HiddenFor(m => Model.Contact.Id)

                <div class="form-group">
                    <label asp-for="Contact.Address" class="col-md-2 control-label"></label>
                    <div class="col-md-6">

                        @Html.DropDownListFor(m => m.Contact.AddressId,
                                                          new SelectList(Model.Addresses.Select(x => new { Value = x.Id, Text = x.AddressName }), "Value", "Text"),
                                                          htmlAttributes: new { @class = "form-control border-input" })
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Contact.FirstName" class="col-md-2 control-label"></label>
                    <div class="col-md-6">
                        <input asp-for="Contact.FirstName" class="form-control" placeholder="Enter first name" />
                        <span asp-validation-for="Contact.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Contact.LastName" class="col-md-2 control-label"></label>
                    <div class="col-md-6">
                        <input asp-for="Contact.LastName" class="form-control" placeholder="Enter last name" />
                        <span asp-validation-for="Contact.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Contact.PhoneNo" class="col-md-2 control-label"></label>
                    <div class="col-md-6">
                        <input asp-for="Contact.PhoneNo" class="form-control" placeholder="Enter phone number" />
                        <span asp-validation-for="Contact.PhoneNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="btn-group col-md-offset-2 col-md-6">
                        <input class="btn btn-info" type="submit" value="Return" asp-controller="Contact" asp-action="Index" />
                        <input class="btn btn-success" type="submit" value="Update" />
                    </div>
                </div>
            </form>
        </div>
    </div>