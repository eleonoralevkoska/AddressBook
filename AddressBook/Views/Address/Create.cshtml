@model AddressViewModel;
@{
    ViewData["Title"] = "Create";
}
    <div class="row orderForm">
        <div class="col-md-6">
            <form asp-controller="Address" asp-action="Create" method="post" class="form-horizontal" role="form">
                <h3 class="col-md-offset-2">Create new address</h3>
                <div class="form-group">
                    <label asp-for="Address.AddressName" class="col-md-2 control-label"></label>
                    <div class="col-md-6">
                        <input asp-for="Address.AddressName" class="form-control" placeholder="Enter address name" />
                        <span asp-validation-for="Address.AddressName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Address.City" class="col-md-2 control-label"></label>
                    <div class="col-md-6">
                        <input asp-for="Address.City" class="form-control" placeholder="Enter city" />
                        <span asp-validation-for="Address.City" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="btn-group col-md-offset-2 col-md-6">
                        <input class="btn btn-info" type="submit" value="Return" asp-controller="Address" asp-action="Index" />
                        <input class="btn btn-success" type="submit" value="Create" />
                    </div>
                </div>
            </form>
        </div>
    </div>